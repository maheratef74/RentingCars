@using Microsoft.AspNetCore.Mvc.Localization
@model RentingCars.Dtos.CustomerDto
@inject IViewLocalizer localizer
@{
    Layout = null;
}
<body>
<link rel="stylesheet" href="~/css/CustomerProfile.css"/>
<div class="container">
    <div class="main-body">
        <!-- Breadcrumb -->
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card rtl">
                    <div class="card-body ">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="@Url.Content("~/images/images.jpeg")" alt="ProfilePhoto" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.FullName</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0">
                                <a href="https://www.facebook.com/profile.php?id=100009707350577" target="_blank" class="text-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary">
                                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                                    </svg>
                                    @localizer["Facebook"]
                                </a>
                            </h6>
                            <span class="text-secondary">
                                <a href="https://www.facebook.com/profile.php?id=100009707350577" target="_blank"></a>
                            </span>
                        </li>
                    </ul>
                </div>

            </div>
            <div class="col-md-8 rtl text-center align-items-center" >
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">@localizer["Full Name"]</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.FullName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">@localizer["Mobile"]</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Phone
                            </div>
                        </div>
                        <hr>
                        
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">@localizer["Date of birth"]</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.DateOfBirth.ToString("yyyy-MM-dd")
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">@localizer["age"]</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @{
                                    var today = DateTime.Today;
                                    var age = today.Year - Model.DateOfBirth.Year;

                                   
                                }
                                @age
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">@localizer["Gender"]</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @localizer[@Model.Gender.ToString()]
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">@localizer["Address"]</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Address
                            </div>
                        </div>
                        <hr>
                        <div class="row ltr">
                            <div class="col-sm-12">
                                <a style="color: white;" class="btn btn-primary" href="@Url.Action("Update", "Patient")">
                                    @localizer["Edit"]
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
</body>